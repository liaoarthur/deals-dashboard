# ─── Required ─────────────────────────────────────────────────────────────────
HUBSPOT_ACCESS_TOKEN=           # HubSpot private app access token

DATABRICKS_SERVER_HOSTNAME=     # e.g. dbc-xxxxxx.cloud.databricks.com
DATABRICKS_HTTP_PATH=           # e.g. /sql/1.0/warehouses/xxxxxxxx
DATABRICKS_TOKEN=               # Databricks personal access token

# ─── Authentication ───────────────────────────────────────────────────────────
SECRET_KEY=                     # Flask session signing key (python -c "import secrets; print(secrets.token_hex(32))")
AUTH_USERS=                     # Comma-separated email:passwordhash pairs
                                # Generate hashes: python packages/lookalike-prospecting/generate_password.py <password>
                                # Format: admin@co.com:pbkdf2:sha256:...,user@co.com:pbkdf2:sha256:...

# ─── Optional ─────────────────────────────────────────────────────────────────
OPENAI_API_KEY=                 # Enables LLM-powered medical specialty expansion
CLAY_WEBHOOK_URL=               # Clay webhook for company contact discovery
REDIS_HOST=localhost            # Redis for persistent Clay search cache
REDIS_PORT=6379

# ─── Deployment (set in Railway / Vercel) ─────────────────────────────────────
ALLOWED_ORIGINS=https://deals-dashboard-rho.vercel.app   # CORS origins (comma-separated)
NEXT_PUBLIC_API_BASE_URL=       # Vercel build-time: production API URL for frontend
